---
#
# - To force encryption, add "-k _" to both daemons
# - Key located under /opt/rustdesk/data/id_ed25519.pub
# - Add said key to both "connect requestor" and "connect node"
# - On Rustdesk GUI-client,
# -   click on 3-dot
# -   navigate to "Settings" > "Network":
# -   under "ID/Relay Server", update
# -    "ID Server" (i.e., rustdesk host IP address) &
# -    "Key" (i.e., public key)
# -   Click "Apply"
#
services:
  hbbs:
    image: rustdesk/rustdesk-server:latest
    container_name: hbbs
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    ports:
      - 21115:21115
      - 21116:21116
      - 21116:21116/udp
      - 21118:21118
    command: hbbs -r {{ rustdesk_uri }}:21117 -k _
    volumes:
      - ./data:/root
    networks:
      - rustdesk_default
    depends_on:
      - hbbr

  hbbr:
    image: rustdesk/rustdesk-server:latest
    container_name: hbbr
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    ports:
      - 21117:21117
      - 21119:21119
    command: hbbr -k _
    volumes:
      - ./data:/root
    networks:
      - rustdesk_default

networks:
  rustdesk_default:
    external: false
